<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.hjq.bar.TitleBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <com.hjq.demo.ui.widget.BottomBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar">

        <TextView
            android:id="@+id/tv_bt_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/space_120"
            android:layout_marginTop="@dimen/space_120"
            android:textSize="@dimen/font_size_48px"
            android:text="蓝牙开关:"/>

        <com.hjq.widget.SwitchButton
            android:id="@+id/bt_switch"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_bt_switch"
            android:layout_marginLeft="@dimen/space_30"
            app:layout_constraintTop_toTopOf="@+id/tv_bt_switch"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bt_switch"/>

        <TextView
            android:id="@+id/bt_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/bt_switch"
            android:layout_marginLeft="@dimen/space_30"
            app:layout_constraintTop_toTopOf="@+id/tv_bt_switch"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bt_switch"
            android:textColor="@color/red"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bt_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_bt_switch"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_bt_switch"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/space_200"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>