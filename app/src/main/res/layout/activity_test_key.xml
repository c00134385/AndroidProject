<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.hjq.bar.TitleBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/speaker"
        tools:ignore="MissingConstraints" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
        android:orientation="horizontal">

        <CheckedTextView
            android:id="@+id/volume_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/volume_sub"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/key_add_v"
            android:textSize="@dimen/font_size_20px"
            android:background="@drawable/bg_textview_selector"/>

        <CheckedTextView
            android:id="@+id/volume_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/volume_add"
            app:layout_constraintRight_toLeftOf="@+id/home_key"
            app:layout_constraintTop_toTopOf="@+id/volume_add"
            app:layout_constraintBottom_toBottomOf="@+id/volume_add"
            android:text="@string/key_sub_v"
            android:textSize="@dimen/font_size_20px"
            android:background="@drawable/bg_textview_selector"/>

        <CheckedTextView
            android:id="@+id/home_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/volume_sub"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/volume_add"
            app:layout_constraintBottom_toBottomOf="@+id/volume_add"
            android:text="@string/key_home"
            android:textSize="@dimen/font_size_20px"
            android:background="@drawable/bg_textview_selector"/>

    </android.support.constraint.ConstraintLayout>


    <com.hjq.demo.ui.widget.BottomBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>