<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/hp_state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/space_120"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/space_80"
        android:text="耳机状态：" />

    <TextView
        android:id="@+id/hp_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/hp_state_title"
        android:layout_marginLeft="@dimen/space_10"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="@+id/hp_state_title"
        app:layout_constraintBottom_toBottomOf="@+id/hp_state_title" />

    <ProgressBar
        android:id="@+id/level"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/left_channel"
        app:layout_constraintRight_toRightOf="@+id/stereo_channel"
        app:layout_constraintTop_toBottomOf="@+id/hp_state_title"
        android:layout_marginTop="@dimen/space_120"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:max="100" />

    <Button
        android:id="@+id/left_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/right_channel"
        app:layout_constraintTop_toBottomOf="@+id/level"
        android:layout_marginTop="@dimen/space_80"
        android:text="左声道"
        />

    <Button
        android:id="@+id/right_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/left_channel"
        app:layout_constraintRight_toLeftOf="@+id/stereo_channel"
        app:layout_constraintTop_toTopOf="@+id/left_channel"
        app:layout_constraintBottom_toBottomOf="@+id/left_channel"
        android:text="右声道"
        />

    <Button
        android:id="@+id/stereo_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/right_channel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/left_channel"
        app:layout_constraintBottom_toBottomOf="@+id/left_channel"
        android:text="立体声"
        />

</android.support.constraint.ConstraintLayout>